---
import '../styles/global.css'

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full"> <!--sets the language to english and the height to full -->
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title> <!--title of window -->
  </head>

  <body class="h-full bg-gray-900"> <!--height is full size of the parent and sets the background to gray -->
    <main class="h-full flex items-center justify-center"> <!-- height is full size of the parent, creates a flex conatiner and centers the items -->
      <div class="bg-yellow-200 p-4"> <!--sets the background to yellow and adds padding -->
        <slot />
      </div>
    </main>
  </body>
</html>
